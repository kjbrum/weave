{
  "name": "weave",
  "version": "0.1.0",
  "description": "Prototyping made easy.",
  "scripts": {
    "browsersync": "browser-sync start --server \"dist\" --files \"dist/**/*\" --reload-delay 2000",
    "build": "npm run clean && npm run setup:build && npm run twig:build && npm run img:build && npm run js:build:all && npm run css:build",
    "clean": "rm -rf \"dist\"",
    "css:autoprefix": "postcss --use autoprefixer -r dist/css/*.css",
    "css:build": "npm run css:compile && npm run css:autoprefix",
    "css:compile": "node-sass --source-map true --output-style compressed src/scss/style.scss dist/css/style.css",
    "css:watch": "chokidar \"src/scss\" --command \"npm run css:build\"",
    "dev": "npm run build && parallelshell \"npm run watch\" \"npm run browsersync\"",
    "img:build": "rm -rf \"dist/img/*\" && cp -a \"src/img/.\" \"dist/img/\"",
    "img:watch": "chokidar \"src/img\" --command \"npm run img:build\"",
    "twig:build": "node scripts/twig-build.js",
    "twig:watch": "chokidar \"src/pages\" \"src/partials\" \"src/data\" --command \"npm run twig:build\"",
    "js:build:all": "npm run js:build:head && npm run js:build:main",
    "js:build:head": "babel --presets env,minify src/js/head --out-file dist/js/head.min.js",
    "js:build:main": "babel --presets env,minify src/js/main.js --out-file dist/js/main.min.js",
    "js:watch:head": "chokidar \"src/js/head/**/*.js\" --command \"npm run js:build:head\"",
    "js:watch:main": "chokidar \"src/js/main.js\" --command \"npm run js:build:main\"",
    "setup:build": "mkdir \"dist\" && mkdir \"dist/css\" && mkdir \"dist/js\" && mkdir \"dist/img\"",
    "watch": "parallelshell \"npm run twig:watch\" \"npm run js:watch:head\" \"npm run js:watch:main\" \"npm run css:watch\" \"npm run img:watch\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kjbrum/weave.git"
  },
  "author": "Kyle Brumm <kjbrumm@gmail.com> (http://kylebrumm.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kjbrum/weave/issues"
  },
  "homepage": "https://github.com/kjbrum/weave#readme",
  "devDependencies": {
    "autoprefixer": "latest",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.4.3",
    "chokidar-cli": "^1.2.0",
    "glob": "latest",
    "js-beautify": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "twig": "latest"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "ie > 8"
  ]
}
