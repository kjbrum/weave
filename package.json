{
  "name": "weave",
  "version": "0.1.0",
  "description": "Prototyping made easy.",
  "scripts": {
    "browsersync": "browser-sync start --server \"dist\" --files \"dist/**/*\" --reload-delay 2000",
    "build": "npm run clean && npm run setup:build && npm run twig:build && npm run img:build && npm run js:build && npm run css:build",
    "clean": "rm -rf \"dist\"",
    "css:autoprefix": "postcss --use autoprefixer -r dist/css/*.css",
    "css:build": "npm run css:compile && npm run css:autoprefix",
    "css:compile": "node-sass --source-map true --output-style compressed src/scss/style.scss dist/css/style.css",
    "css:watch": "watch \"npm run css:build\" src/scss",
    "dev": "npm run build && parallelshell \"npm run watch\" \"npm run browsersync\"",
    "img:build": "rm -rf \"dist/img/*\" && cp -a \"src/img/.\" \"dist/img/\"",
    "img:watch": "watch \"npm run img:build\" src/img",
    "twig:build": "node scripts/twig-build.js",
    "twig:watch": "watch \"npm run twig:build\" src/pages src/partials src/data",
    "js:build": "npm run js:head && npm run js:main",
    "js:head": "uglifyjs src/js/head/*.js -o dist/js/head.min.js",
    "js:main": "uglifyjs src/js/main/*.js -o dist/js/main.min.js",
    "js:watch": "watch \"npm run js:build\" src/js/head src/js/main",
    "setup:build": "mkdir \"dist\" && mkdir \"dist/css\" && mkdir \"dist/js\" && mkdir \"dist/img\"",
    "watch": "parallelshell \"npm run twig:watch\" \"npm run js:watch\" \"npm run css:watch\" \"npm run img:watch\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kjbrum/weave.git"
  },
  "author": "Kyle Brumm <kjbrumm@gmail.com> (http://kylebrumm.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kjbrum/weave/issues"
  },
  "homepage": "https://github.com/kjbrum/weave#readme",
  "devDependencies": {
    "autoprefixer": "latest",
    "glob": "latest",
    "js-beautify": "latest",
    "node-sass": "latest",
    "parallelshell": "latest",
    "postcss-cli": "latest",
    "twig": "latest",
    "uglify-js": "latest",
    "watch": "latest"
  }
}
