{% extends '../partials/general/_layout.twig' %}

{% block content %}

    <!-- Blocks -->
    <div class="section section--blocks">
        <div class="container">
            {% set categories = craft.categories %}
            <ul class="list--inline">
                {% for category in categories %}
                    <li><a href="{{ category.url }}">{{ category.title }}</a></li>
                {% endfor %}
            </ul>

            <div class="g g-center g-s-2 g-m-3 g-l-4">
                {% set entries = craft.entries.section.news %}
                {% for entry in entries %}
                    <div class="gi">
                        {% include '../partials/blocks/block.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
